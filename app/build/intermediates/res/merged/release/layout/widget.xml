<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_back"

    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:id="@+id/month_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/prev_month_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/previous_month"
            android:src="@drawable/ic_previous_month" />

        <Button
            android:id="@+id/month_label"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textColor="@color/foreground_full"
            android:textSize="28sp" />

        <ImageButton
            android:id="@+id/next_month_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/next_month"
            android:src="@drawable/ic_next_month" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_container"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal" >

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/dc1"
            android:layout_width = "0dp"
            android:layout_weight = "1"
            android:layout_height = "match_parent"
            android:gravity = "center"
            android:fontFamily = "sans-serif-condensed"
            android:textColor = "@color/foreground_semitext"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:text="ПН">
        </TextView>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/dc2"
            android:layout_width = "0dp"
            android:layout_weight = "1"
            android:layout_height = "match_parent"
            android:gravity = "center"
            android:fontFamily = "sans-serif-condensed"
            android:textColor = "@color/foreground_semitext"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:text="ВТ">
        </TextView>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/dc3"
            android:layout_width = "0dp"
            android:layout_weight = "1"
            android:layout_height = "match_parent"
            android:gravity = "center"
            android:fontFamily = "sans-serif-condensed"
            android:textColor = "@color/foreground_semitext"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:text="СР">
        </TextView>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/dc4"
            android:layout_width = "0dp"
            android:layout_weight = "1"
            android:layout_height = "match_parent"
            android:gravity = "center"
            android:fontFamily = "sans-serif-condensed"
            android:textColor = "@color/foreground_semitext"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:text="ЧТ">
        </TextView>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/dc5"
            android:layout_width = "0dp"
            android:layout_weight = "1"
            android:layout_height = "match_parent"
            android:gravity = "center"
            android:fontFamily = "sans-serif-condensed"
            android:textColor = "@color/foreground_semitext"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:text="ПТ">
        </TextView>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/dc6"
            android:layout_width = "0dp"
            android:layout_weight = "1"
            android:layout_height = "match_parent"
            android:gravity = "center"
            android:fontFamily = "sans-serif-condensed"
            android:textColor = "@color/foreground_semitext"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:text="СБ">
        </TextView>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/dc7"
            android:layout_width = "0dp"
            android:layout_weight = "1"
            android:layout_height = "match_parent"
            android:gravity = "center"
            android:fontFamily = "sans-serif-condensed"
            android:textColor = "@color/foreground_semitext"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:text="ВС">
        </TextView>

    </LinearLayout>


    <ListView
        android:id = "@+id/widgetListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout><!-- From: file:/D:/Android/proj/PlanAndDoPro/app/src/main/res/layout/widget.xml -->